<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tabBtnAtrr">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="radioButtonAtrr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/radio_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="vodLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="downLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="vodTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="vodEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/input_box</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">www.leshi.cn</item>
    </style>
    <style name="playbtn">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/play_btn_bg</item>
    </style>
    <style name="downbtn">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/play_btn_bg</item>
    </style>

    <style name="main_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="main_input_name">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_gravity">center_vertical|left</item>
    </style>

    <style name="main_input_edit">
        <item name="android:layout_width">163dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/main_input_edit</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="main_submit_style">
        <item name="android:layout_width">@dimen/activity_main_submit_width</item>
        <item name="android:layout_height">@dimen/activity_main_title_hight</item>
        <item name="android:background">@drawable/main_start_button</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
