<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- wheel:matProg_barColor="#5588FF" -->

    <com.letv.skin.widget.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="#ffffff"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="true" />

    <RelativeLayout
        android:id="@+id/letv_skin_v4_letv_rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" >

        <LinearLayout
        	android:id="@+id/letv_skin_v4_letv_ll_loading"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            >
            
            <com.lecloud.volley.toolbox.NetworkImageView
                android:id="@+id/letv_skin_v4_letv_iv_loading"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />
<!--             android:src="@drawable/letv_skin_v4_letv_iv_loading_image" -->

            <ImageView
                android:id="@+id/letv_skin_v4_letv_iv_loading_line"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/letv_skin_v4_loading" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>